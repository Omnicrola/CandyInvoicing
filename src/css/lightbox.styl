.lightbox {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  background-color: rgba(0, 0, 0, .4);

  & .innerContent {
    width: 800px;
    height: 85%;
    margin: auto;
    padding: 10px;
    border: 4px solid black;
    background: white;
    position: relative;
    top: 5%;

    & .header {
      & .row {
        padding: 2px;
        & .label {
          width: 75px;
          padding-right:5px;
          margin-right:5px;
          display: inline-block;
          border-right: 1px solid black;
          text-align: right;
        }
        & .data {
          display:inline-block;
        }
      }
    }
    & button.close {
      border: 1px solid grey;
      width: 30px;
      height: 30px;
      float: right;
    }
  }
}