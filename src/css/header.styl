#header {
  width: 1000px;
  margin: auto;
  background: linear-gradient(rgb(208, 21, 110), rgb(5, 76, 120));

  & ul.menu {
    list-style: none;
    display: inline-block;
    & li {
      display: inline-block;

      & a {
        display: inline-block;
        padding: 4px;
        &:hover {
          text-decoration: none;
        }
      }
      &:hover {
        background-color: white;
      }
    }
  }

  & .bar1 {
    height: 30px;
    & .menu {
      float: right;
    }
    & .logo {
      width: 160px;
      height: 50px;
      float: left;
      left: 20px;
      background-image: url('images/logo.jpg');
    }
  }
  & .bar2 {
    padding: 4px;
    & .search {
      width: 400px;
      margin: auto;
    }
    & input#searchTerm {
      vertical-align: top;
      width: 300px;
      font-size 1.2em;
      padding: 10px;
      border: solid 1px #dcdcdc;
      border-radius: 5px;
      transition: box-shadow 0.3s, border 0.3s;
      &:focus, &.focus {
        border: solid 1px #707070;
        box-shadow: 0, 0, 5px, 1px #969696;
      }
    }

    & button#searchButton {
      vertical-align: top;
      width: 43px;
      height: 43px;
      border: 1px solid black;
      border-radius: 5px;
      padding: 4px;
      overflow: hidden;
      text-indent: -99999;
    }
  }
  & .bar3 {
    height: 30px;
    & .menu {
      float: right;
    }
  }
}