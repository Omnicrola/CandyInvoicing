.footer {
  width: 1000px;
  margin: auto;
  margin-top: 10px;
  padding: 10px;
  background: linear-gradient(rgb(208, 21, 110), white);
  height: 20px;
  font-size: 0.8em;
  vertical-align: middle;
  text-align: center;
  & ul {
    display: inline-block;
    list-style: none;
    & li {
      display: inline-block;
      border-left: 1px solid #0d3349;
      &:first-child {
        border: none;
      }
      & a {
        padding: 6px;
        text-decoration: none;
      }
    }
  }
}